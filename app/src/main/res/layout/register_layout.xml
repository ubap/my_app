<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:maxLength="30"
        android:id="@+id/registerView_passwordEditText"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/registerView_loginEditText"
        android:layout_alignStart="@+id/registerView_loginEditText"
        android:layout_centerInParent="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/registerView.usernameTextViewValue"
        android:maxLength="30"
        android:ems="10"
        android:id="@+id/registerView_loginEditText"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/registerView_passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" />

    <Button
        android:text="@string/registerView.registerButtonValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerView_registerButton"
        android:onClick="registerIntoService"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/registerView_passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:layout_centerInParent="true" />

</RelativeLayout>