<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/dashboard_layout">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/dashboard_toolbar" />

    <pg.eti.inz.engineer.components.SpeedometerComponent
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dashboard_speedometer"
        android:layout_below="@+id/dashboard_compass"
        android:layout_centerHorizontal="true" />

    <pg.eti.inz.engineer.components.CompassComponent
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dashboard_compass"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/dashboard_toolbar"
        android:layout_centerHorizontal="true" />
</RelativeLayout>